%section.gradient-135-brand.elevation-1
  .container
    %header.OSHeader.padding-v-big
      .row.collapse-b-tablet.align-center
        .col-4
          .OSHeader__Logo
            = link_to '/index.html' do
              = image_tag 'bitnami-white.svg', alt: 'Bitnami Logo'
        .col-8
          %nav.text-r
            = link_to 'Home', '/index.html', class: 'margin-h-normal'
            = link_to 'About', '/about.html', class: 'margin-h-normal'
            = link_to 'GitHub', 'https://github.com/bitnami/middleman-boilerplate',
                      class: 'margin-l-normal', rel: 'noopener', target: '_blank'
